<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">Lola Drinks</h1>
      <p class="lead text-muted">Cardápio de drinks e coqueteis para sua festa - Aproveite o máximo!</p>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row">
        <% @cocktails.each do |cocktail| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <%= cl_image_tag( cocktail.photo, width: 400, height: 300, crop: :fill) %>
            <div class="card-body">
              <p class="card-text"><%= cocktail.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to 'Ver', cocktail_path(cocktail), class: 'btn btn-sm btn-outline-secondary' %>
                  <%= link_to 'Editar', edit_cocktail_path(cocktail), class: 'btn btn-sm btn-outline-secondary' %>
                </div>
                <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

</main>

<footer class="text-muted">
  <div class="container">
    <p class="float-right">
      <a href="#">Back to top</a>
    </p>
  </div>
</footer>
