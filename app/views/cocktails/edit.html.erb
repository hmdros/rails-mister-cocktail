<div class="banner-new">
  <div class="container">
    <div class="text-center">
      <h1>Would you like to change this drink ?</h1>

      <%= simple_form_for [@cocktail] do |f| %>
      <%= f.label "What would you like to change?" %>
      <div class="input-black">
        <%= f.input :name, class: "text-black" %>
      </div>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: "btn-primary" %>
      <% end %>

    </div>
  </div>
</div>

