<div class="banner-new">
  <div class="container">
    <div class="text-center">
      <h1>You are the barman here</h1>
      <%= simple_form_for [@cocktail] do |f| %>
      <%= f.label "What is the cocktail's name?" %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: "btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

