<div class="banner-new">
  <div class="container">
    <div class="text-center">
      <h1>You are the barman here</h1>
      <div class="col-md-12">
        <%= simple_form_for [@cocktail], class: "form-new" do |f| %>
        <%= f.label "What is the cocktail's name?" %>
        <%= f.input :name %>
        <%= f.input :ingredient_ids, collection: Ingredient.all %>
        <%= f.input :description, label: 'Quantity' %>
        <%= f.input :description %>
        <%= f.input :instruction %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit class: "btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

